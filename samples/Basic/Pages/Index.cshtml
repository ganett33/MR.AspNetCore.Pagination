@page
@model IndexModel

<div class="text-center">
    <div class="users">
        @foreach (var user in Model.Users.Data)
        {
            <div class="user">
                @user.Name (@user.Created.ToLongDateString())
            </div>
        }
    </div>

    <div class="mt-3" style="text-align: center">
        (@Model.Users.Count items)
    </div>

    <div class="pagination mt-3">
        <a asp-page="/Index" asp-route-first="@true" disabled="@(!Model.Users.HasPrevious ? "disabled" : null)">First</a>
        <a asp-page="/Index" asp-route-before="@Model.Users.Data.First().Id" disabled="@(!Model.Users.HasPrevious ? "disabled" : null)">Previous</a>
        <a asp-page="/Index" asp-route-after="@Model.Users.Data.Last().Id" disabled="@(!Model.Users.HasNext ? "disabled" : null)">Next</a>
        <a asp-page="/Index" asp-route-last="@true" disabled="@(!Model.Users.HasNext ? "disabled" : null)">Last</a>
    </div>
</div>
